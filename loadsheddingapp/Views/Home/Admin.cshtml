@{
    ViewData["Title"] = "Admin Page";
}

@model List<Joke>

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-12 vh-100 overflow-auto border border-1">
            @foreach (var joke in Model)
            {
                <div class="row my-2">
                    <div class="col-12">
                        <form class="row g-3 needs-validation" id="admin" method="POST" asp-action="AdminDuties" novalidate>
                            <div class="card">
                                <div class="card-body text-wrap text-start text-capitalize">
                                    <i>Creator: <b>@joke.Username</b></i>
                                    <p>@joke.Body</p>
                                    <div class="row text-end">
                                        <i class="text-sm-end text-muted">Time: @joke.TimeCreated</i>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="rbAcceptance" id="Accepted" value="Accepted">
                                            <label class="form-check-label" for="Accepted" style="margin: 0px 0px 0px 5px">
                                                Accept joke
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="rbAcceptance" id="Rejected" value="Rejected" checked>
                                            <label class="form-check-label" for="Rejected" style="margin:0px 0px 0px 5px">
                                                Reject joke
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" value="@joke.Id" name="jokeid" id="jokeid" />
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
}


